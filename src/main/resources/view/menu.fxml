<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="225.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.marchello.controller.MenuController">
    <Label alignment="CENTER" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #292b2c;" text="Меню" textFill="#f7f7f7"><font><Font name="System Bold" size="17.0" /></font></Label>
    <GridPane layoutY="40.0" prefHeight="220.0" prefWidth="200.0" style="-fx-padding: 5;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button mnemonicParsing="false" onAction="#clickButtonAddClient" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #5cb85c;" text="Добавление клиента" textFill="#f7f7f7" GridPane.rowIndex="0"><font><Font name="System Bold" size="12.0" /></font></Button>
        <Button mnemonicParsing="false" onAction="#clickButtonAddSvc" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #5cb85c;" text="Добавление услуги" textFill="#f7f7f7" GridPane.rowIndex="1"><font><Font name="System Bold" size="12.0" /></font></Button>
        <Button mnemonicParsing="false" onAction="#clickButtonEditClient" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #f0ad4e;" text="Редактирование клиентов" textFill="#f7f7f7" GridPane.rowIndex="2"><font><Font name="System Bold" size="12.0" /></font></Button>
        <Button mnemonicParsing="false" onAction="#clickButtonEditService" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #f0ad4e;" text="Редактирование услуг" textFill="#f7f7f7" GridPane.rowIndex="3"><font><Font name="System Bold" size="12.0" /></font></Button>
        <Button mnemonicParsing="false" onAction="#clickButtonPrint" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #428bca;" text="Печать" textFill="#f7f7f7" GridPane.rowIndex="4"><font><Font name="System Bold" size="12.0" /></font></Button>
        <Button mnemonicParsing="false" onAction="#clickButtonExit" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #d9534f;" text="Закрыть приложение" textFill="#f7f7f7" GridPane.rowIndex="5"><font><Font name="System Bold" size="12.0" /></font></Button>
    </GridPane>
   <Label alignment="CENTER" layoutY="260.0" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #292b2c;" text="Выберите что-нибудь" textFill="#757575"><font><Font name="System Bold Italic" size="12.0" /></font></Label>
</AnchorPane>
